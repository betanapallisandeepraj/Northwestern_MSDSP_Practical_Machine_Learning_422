   "source": [
    "# function to help us plot\n",
    "def scatter(_data, x_name):\n",
    "    plt.scatter(_data[x_name], _data['lpsa'])\n",
    "    plt.xlabel(x_name)\n",
    "    plt.ylabel('lpsa')\n",
    "    plt.show()\n",
    "\n",
    "scatter(data, 'pgg45')"
   ]
